generator client {
  provider = "prisma-client-js"
  // using the default output (node_modules) so imports from "@prisma/client" work as expected
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  tasks        Task[]
  finances     Finance[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  category    String
  status      String   @default("pendente")
  dueDate     DateTime?
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
}

model Finance {
  id          String   @id @default(uuid())
  type        String
  description String
  amount      Float
  date        DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
}
